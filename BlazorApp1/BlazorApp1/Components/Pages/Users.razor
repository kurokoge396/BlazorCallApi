@page "/users"
@inject BlazorApp1.Services.UserApiService UserService

<h3>Users</h3>

@if (users == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <ul>
        @foreach (var user in users)
        {
            <li>
                <p>ID: @user.id</p>
                <p>Name: @user.name</p>
                <p>Email: @user.email</p>
            </li>
        }
    </ul>
}


@code {
    private List<BlazorApp1.Services.User?> users;

    protected override async Task OnInitializedAsync()
    {
        users = await UserService.GetUserAsync();
    }
}
